<UserControl x:Class="Application.BalancedFieldLength.Controls.EngineSettingsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Application.BalancedFieldLength.Controls"
             xmlns:converters="clr-namespace:Application.BalancedFieldLength.Converters"
             mc:Ignorable="d"
             VerticalContentAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="500" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=local:EngineSettingsTabViewModel,
                            IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <converters:NaNToEmptyValueConverter x:Key="DoubleValueConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0"
               Margin="0, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Thrust per engine [kN]" />
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 Margin="0, 5, 0, 5" HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Width="100"
                 Text="{Binding Path=ThrustPerEngine,
                                Converter={StaticResource DoubleValueConverter},
                                Mode=TwoWay}" />

        <Label Grid.Row="1" Grid.Column="0"
               Margin="0, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Number of engines" />
        <Slider Grid.Row="1" Grid.Column="1" Minimum="2" Maximum="6"
                TickPlacement="BottomRight" TickFrequency="1"
                IsSnapToTickEnabled="True"
                Name="NrOfEnginesSlider"
                Value="{Binding Path=NrOfEngines, Mode=TwoWay}" />
        <Label Grid.Row="1" Grid.Column="2"
               Margin="10, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="{Binding ElementName=NrOfEnginesSlider, 
                        Path=Value,
                        UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Row="2" Grid.Column="0"
               Margin="0, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Total thrust [kN]" />
        <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
               Margin="0, 5, 0, 5" HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Width="100"
               IsEnabled="False"
               Content="{Binding Path=TotalThrust, Converter={StaticResource DoubleValueConverter}}" />
        
        <Separator Grid.Row="3" Grid.ColumnSpan="3"/>
        <Label Grid.Row="4" Grid.Column="0"
               Margin="0, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Number of failed engines" />
        <Slider Grid.Row="4" Grid.Column="1" Minimum="1"
                Maximum="{Binding ElementName=NrOfEnginesSlider,
                        Path=Value,
                        UpdateSourceTrigger=PropertyChanged}"
                TickPlacement="BottomRight" TickFrequency="1"
                IsSnapToTickEnabled="True"
                Name="NrOfFailedEnginesSlider"
                Value="{Binding Path=NrOfFailedEngines, Mode=TwoWay}" />
        <Label Grid.Row="4" Grid.Column="2"
               Margin="10, 5, 10, 5" HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="{Binding ElementName=NrOfFailedEnginesSlider, 
                        Path=Value,
                        UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
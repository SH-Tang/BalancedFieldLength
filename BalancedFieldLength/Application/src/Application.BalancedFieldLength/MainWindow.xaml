<metro:MetroWindow x:Class="Application.BalancedFieldLength.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application.BalancedFieldLength"
        xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:controls="clr-namespace:Application.BalancedFieldLength.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel></local:MainViewModel>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type controls:TabControlViewModel}">
            <controls:TabControlView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type controls:GeneralSimulationSettingsTabViewModel}">
            <controls:GeneralSimulationSettingsTabView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type controls:EngineSettingsTabViewModel}">
            <controls:EngineSettingsTabView/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <ContentControl DockPanel.Dock="Top"
                        Content="{Binding TabControlViewModel}">
        </ContentControl>
    </DockPanel>
</metro:MetroWindow>
